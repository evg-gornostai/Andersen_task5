<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_margin="16dp"
    tools:context=".ContactsFragment">

    <androidx.cardview.widget.CardView
        android:id="@+id/contact1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:padding="16dp">

            <TextView
                android:id="@+id/tvNameStatic1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:text="Имя:"
                android:textSize="18sp"
                app:layout_constraintEnd_toStartOf="@id/barrier1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

            <TextView
                android:id="@+id/tvSurnameStatic1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:text="Фамилия:"
                android:textSize="18sp"
                app:layout_constraintEnd_toStartOf="@id/barrier1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvNameStatic1" />

            <TextView
                android:id="@+id/tvPhoneNumberStatic1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:text="Телефон:"
                android:textSize="18sp"
                app:layout_constraintEnd_toStartOf="@id/barrier1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvSurnameStatic1" />

            <androidx.constraintlayout.widget.Barrier
                android:id="@+id/barrier1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:barrierDirection="end"
                app:constraint_referenced_ids="tvNameStatic1, tvSurnameStatic1, tvPhoneNumberStatic1" />

            <TextView
                android:id="@+id/tvName1"
                android:layout_width="0dp"
                android:text="Сергей"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/barrier1"
                app:layout_constraintTop_toTopOf="@id/tvNameStatic1" />

            <TextView
                android:id="@+id/tvSurname1"
                android:layout_width="0dp"
                android:text="Бобров"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/barrier1"
                app:layout_constraintTop_toTopOf="@id/tvSurnameStatic1" />

            <TextView
                android:id="@+id/tvPhoneNumber1"
                android:layout_width="0dp"
                android:text="+375298764311"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/barrier1"
                app:layout_constraintTop_toTopOf="@id/tvPhoneNumberStatic1" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

